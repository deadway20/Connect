<resources>
    <style name="Theme.Connect" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- اللون الأساسي -->
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorSecondary">@color/light_blue</item>
        <item name="colorSecondaryVariant">@color/light_blue</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- الخلفية والإضاءة -->
        <item name="android:windowBackground">@color/background</item>
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="fontFamily">@font/tajawal_medium</item>
    </style>

    <style name="MyButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Icon">
        <item name="backgroundTint">@null</item>
        <item name="android:layout_width">110dp</item>
        <item name="android:layout_height">110dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <style name="CircleImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="outBox_style" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="boxStrokeColor">@color/outline_color</item>
        <item name="boxStrokeWidth">2dp</item>
    </style>

    <style name="BottomAppBarCornerStyle" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">20dp</item>
    </style>

    <style name="Rounded_img">
        <item name="cornerSize">50dp</item>
    </style>

    <!-- res/values/styles.xml or res/values-night/styles.xml -->
    <style name="Theme.Connect.BottomSheet.Material3" parent="Theme.Material3.DayNight.BottomSheetDialog">
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.Material3.Corner.Medium</item>
        <item name="bottomSheetDragHandleStyle">@style/Widget.Material3.BottomSheet.DragHandle</item>
        <item name="android:windowIsFloating">false</item> <!-- Ensure it's not floating for proper drag handle behavior -->
        <item name="dynamicColorThemeOverlay">@null</item>
    </style>

    <style name="BottomAppBarRoundedCorners" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerSizeTopRight">16dp</item>
        <item name="cornerSizeBottomLeft">16dp</item>
        <item name="cornerSizeBottomRight">16dp</item>
    </style>

    <style name="CustomCardCorners" parent="Widget.MaterialComponents.CardView">
        <item name="cornerSizeBottomRight">20dp</item>
        <item name="cornerSizeTopRight">20dp</item>
    </style>

</resources>