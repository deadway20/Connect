<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">
    <!-- Top Bar -->
    <LinearLayout
        android:id="@+id/toolbar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:paddingHorizontal="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/back_btn"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:contentDescription="@string/back_btn"
            android:scaleType="fitXY"
            android:src="@drawable/back_btn" />

        <TextView
            android:id="@+id/topBar_title"
            android:layout_width="0dp"
            android:layout_height="38dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:fontFamily="@font/angelos"
            android:gravity="center"
            android:maxHeight="44dp"
            android:text="My Tasks"
            android:textColor="@color/text_primary"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/message_btn"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:scaleType="fitXY"
            android:src="@drawable/settings_ico" />
    </LinearLayout>

    <!-- Calendar Expandable Section -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/calendarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/card_background"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_layout">

        <!-- Month/Year Header -->
        <TextView
            android:id="@+id/monthYearText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="APRIL 2025"
            android:textColor="@color/theme_color"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Calendar Navigation Icons -->
        <ImageButton
            android:id="@+id/calendarCollapseButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginEnd="8dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Collapse calendar"
            android:src="@drawable/arrow_up_ico"
            app:layout_constraintBottom_toBottomOf="@+id/monthYearText"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/monthYearText"
            app:tint="@color/theme_color" />

        <ImageButton
            android:id="@+id/calendarOptionsButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginEnd="8dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Calendar options"
            android:src="@drawable/three_dots_ico"
            app:layout_constraintBottom_toBottomOf="@+id/monthYearText"
            app:layout_constraintEnd_toStartOf="@+id/calendarCollapseButton"
            app:layout_constraintTop_toTopOf="@+id/monthYearText"
            app:tint="@color/theme_color" />

        <!-- Calendar Grid -->
        <GridLayout
            android:id="@+id/calendarGrid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:columnCount="7"
            android:paddingHorizontal="8dp"
            android:paddingBottom="16dp"
            app:layout_constraintTop_toBottomOf="@+id/monthYearText">

            <!-- Day of Week Headers -->
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:gravity="center"
                android:text="Sun"
                android:textColor="@color/theme_color"
                android:textSize="14sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:gravity="center"
                android:text="Mon"
                android:textColor="@color/theme_color"
                android:textSize="14sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:gravity="center"
                android:text="Tue"
                android:textColor="@color/theme_color"
                android:textSize="14sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:gravity="center"
                android:text="Wed"
                android:textColor="@color/theme_color"
                android:textSize="14sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:gravity="center"
                android:text="Thu"
                android:textColor="@color/theme_color"
                android:textSize="14sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:gravity="center"
                android:text="Fri"
                android:textColor="@color/theme_color"
                android:textSize="14sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:gravity="center"
                android:text="Sat"
                android:textColor="@color/theme_color"
                android:textSize="14sp" />

            <!-- Calendar Days (Generated dynamically, this is just a template) -->
            <!-- Week 1 -->
            <TextView
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_columnWeight="1"
                android:gravity="center"
                android:text="30"
                android:textColor="@color/theme_color"
                android:textSize="18sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_columnWeight="1"
                android:gravity="center"
                android:text="31"
                android:textColor="@color/theme_color"
                android:textSize="18sp" />

            <!-- And so on for all the days of the month... (abbreviated for clarity) -->
            <TextView
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_columnWeight="1"
                android:gravity="center"
                android:text="1"
                android:textColor="@color/theme_color"
                android:textSize="18sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_columnWeight="1"
                android:gravity="center"
                android:text="2"
                android:textColor="@color/theme_color"
                android:textSize="18sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_columnWeight="1"
                android:gravity="center"
                android:text="3"
                android:textColor="@color/theme_color"
                android:textSize="18sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_columnWeight="1"
                android:gravity="center"
                android:text="4"
                android:textColor="@color/theme_color"
                android:textSize="18sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_columnWeight="1"
                android:gravity="center"
                android:text="5"
                android:textColor="@color/theme_color"
                android:textSize="18sp" />
        </GridLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Horizontal Date Scroller -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/dateScrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:clipToPadding="false"
        android:orientation="horizontal"
        android:paddingHorizontal="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/calendarLayout" />

    <!-- Todo List -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/todoRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:clipToPadding="false"
        android:paddingBottom="80dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dateScrollView"
        app:tint="@color/white"
        tools:ignore="SpeakableTextPresentCheck" />

    <!-- Floating Action Button -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabAddTask"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_margin="16dp"
        android:contentDescription="@string/add_new_post"
        app:backgroundTint="@color/light_blue"
        app:tint="@color/text_secondary"
        app:srcCompat="@android:drawable/ic_input_add"
        tools:ignore="RtlHardcoded"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
