<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:shapeable="http://schemas.android.com/apk/res-auto"
    style="@style/TextAppearance.AppCompat.Widget.ActionBar.Menu"
    tools:context=".SplashScreen">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:contentDescription="@string/ico_description"
        android:focusable="true"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/splash_screen"
        shapeable:layout_constraintBottom_toBottomOf="parent"
        shapeable:layout_constraintEnd_toEndOf="parent"
        shapeable:layout_constraintHorizontal_bias="0.546"
        shapeable:layout_constraintStart_toStartOf="parent"
        shapeable:layout_constraintTop_toTopOf="parent"
        shapeable:layout_constraintVertical_bias="0.397"
        shapeable:shapeAppearance="@style/CircleImageView" />

</androidx.constraintlayout.widget.ConstraintLayout>